{
    "name": "Tag It",
    "version": "0.0.1",
    "description": "Simply store, tag and search web pages of interest",
    "author": "ugo.matrangolo@gmail.com",
    "manifest_version": 2,
    "permissions": [ "tabs", "storage", "activeTab", "<all_urls>" ],
    "background": {
        "scripts": [
            "js/underscore.js",
            "js/store.js",
            "js/lunr.min.js",
            "js/search.js",
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "public/icon.png"
    },
    "commands": {
        "journal": { // open a new tab with all the saves urls
            "suggested_key": { "default": "Alt+Shift+J" },
            "description": "Show the journal in a new tab"
        },
        "save": {  // save current url in the journal
            "suggested_key": { "default": "Alt+Shift+S" },
            "description": "Send a 'save' event to the extension"
        }
    }
}

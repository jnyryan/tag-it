{
    "name": "Tag It",
    "version": "0.0.1",
    "description": "Simply store, tag and search web pages of interest",
    "author": "ugo.matrangolo@gmail.com",
    "manifest_version": 2,
    "permissions": [ "tabs" ],
    "background": {
        "scripts": [ "background.js" ]
    },
    "browser_action": {
        "default_icon": "icon.png"
    },
    "commands": {
        "journal": { // open a new tab with all the saves urls
            "suggested_key": {
                "default": "Ctrl+J",
                "mac": "MacCtrl+J"
            },
            "description": "Show the journal in a new tab"
        },
        "save": {
            "suggested_key": { // save current url in the journal
                "default": "Ctrl+S",
                "mac": "MacCtrl+S"
            },
            "description": "Send a 'save' event to the extension"
        }
    }
}
